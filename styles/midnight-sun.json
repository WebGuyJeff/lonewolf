{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Midnight sun",
	"version": 2,
	"settings": {
		"color": {
			"gradients": [
                {
                    "slug": "sunrise",
                    "gradient": "linear-gradient(170deg,#fbad40 0%,#ef4236 100%)",
                    "name": "Sunrise"
                }
			],
			"palette": [
				{
					"slug": "lw-bg",
					"color": "#072c50",
					"name": "Background"
				},
				{
					"slug": "lw-fg",
					"color": "#ffffff",
					"name": "Foreground"
				},
				{
					"slug": "lw-bg-alt",
					"color": "#fff2",
					"name": "Background Alt"
				},
				{
					"slug": "lw-fg-alt",
					"color": "#fcfcfc",
					"name": "Foreground Alt"
				},
				{
					"slug": "lw-accent",
					"color": "#f89549",
					"name": "Accent"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Comfortaa",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 700",
							"src": [
								"file:./assets/fonts/Comfortaa/Comfortaa-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "Comfortaa, sans-serif",
					"name": "Comfortaa",
					"slug": "comfortaa"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Merriweather",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/Merriweather/Merriweather-Black.ttf"
							]
						}
					],
					"fontFamily": "Merriweather, serif",
					"name": "Merriweather",
					"slug": "merriweather"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--normal)",
			"fontFamily": "var(--wp--preset--font-family--comfortaa)",
			"fontWeight": "400",
			"lineHeight": "1.7"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--lw-fg)"
				},
				"typography": {
					"textDecoration": "none"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--merriweather)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--huge)",
					"fontWeight": "900",
					"lineHeight": "1.25",
					"letterSpacing": "-0.03em"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "900",
					"lineHeight": "1.35",
					"letterSpacing": "-0.03em"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "900",
					"lineHeight": "1.35",
					"letterSpacing": "-0.02em"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "900",
					"lineHeight": "1.4",
					"letterSpacing": "-0.02em"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--normal)",
					"fontWeight": "900",
					"lineHeight": "1.55",
					"letterSpacing": "-0.02em"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "900",
					"lineHeight": "1.6",
					"letterSpacing": "-0.02em"
				}
			}
		}
	}
}
