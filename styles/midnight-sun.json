{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"title": "Midnight sun",
	"version": 2,
	"settings": {
		"color": {
			"gradients": [
                {
                    "slug": "sunrise",
                    "gradient": "linear-gradient(170deg,#fbad40 0%,#ef4236 100%)",
                    "name": "Sunrise"
                }
			],
			"palette": [
				{
					"slug": "lw-bg",
					"color": "#072c50",
					"name": "Background"
				},
				{
					"slug": "lw-fg",
					"color": "#ffffff",
					"name": "Foreground"
				},
				{
					"slug": "lw-bg-alt",
					"color": "#fff2",
					"name": "Background Alt"
				},
				{
					"slug": "lw-fg-alt",
					"color": "#fcfcfc",
					"name": "Foreground Alt"
				},
				{
					"slug": "lw-accent",
					"color": "#f89549",
					"name": "Accent"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFace": [
						{
							"fontFamily": "Comfortaa",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "300 700",
							"src": [
								"file:./assets/fonts/Comfortaa/Comfortaa-VariableFont_wght.ttf"
							]
						}
					],
					"fontFamily": "Comfortaa, sans-serif",
					"name": "Comfortaa",
					"slug": "body"
				},
				{
					"fontFace": [
						{
							"fontFamily": "Merriweather",
							"fontStretch": "normal",
							"fontStyle": "normal",
							"fontWeight": "900",
							"src": [
								"file:./assets/fonts/Merriweather/Merriweather-Black.ttf"
							]
						}
					],
					"fontFamily": "Merriweather, serif",
					"name": "Merriweather",
					"slug": "heading"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--lw-fg)"
				}
			},
			"h1": { "typography": { "fontWeight": "900" } },
			"h2": { "typography": { "fontWeight": "900" } },
			"h3": { "typography": { "fontWeight": "900" } },
			"h4": { "typography": { "fontWeight": "900" } },
			"h5": { "typography": { "fontWeight": "900" } },
			"h6": { "typography": { "fontWeight": "900" } }
		}
	}
}
